{{{navbar}}}

<div class="profile-card">
    <div class="profile-card__user-avatar">
        {{#if edit}}
            {{{btnEdit}}}
        {{/if}}
        {{{avatar}}}
    </div>

    <ul class="profile-card__user-info">
        <li>{{name}} {{surname}}</li>
        <li>@{{username}}</li>
        <li>{{{description}}}</li>
        <li><a href="" id="userFollowers">{{followers}} подписчиков</a>&ensp;•&ensp;
            <a href="" id="userFollowings">{{following}} подписок</a></li>
        {{#if show}}
            <li>
                {{{btnMessage}}}
                {{{btnSub}}}
            </li>
        {{/if}}
    </ul>
</div>

<div class="profile-desk">
    <div class="profile-actions">
        <div class="profile-desk__create">
            {{#if edit}}
                <a href="/create-pin"> <span class="profile-desk__create__linktext">Создать пин</span> <i class="fas fa-plus"></i></a>
                <a href="/create-board"><span class="profile-desk__create__linktext">Создать доску</span> <i class="fas fa-clipboard"></i></a>
            {{/if}}
        </div>

        <div class="profile-tabs">
            <ul>
                <li><input type="radio" name="tab" id="alltab" checked="checked"><label for="alltab">
                    <svg viewBox="0 0 211 212"><path d="M211 205l0 -112c0,-5 -1,-9 -5,-12l-88 -77c-6,-5 -15,-5 -21,0l-91 78c-4,3 -6,7 -6,12l0 111c0,4 3,7 8,7l56 0c5,0 8,-3 8,-7l0 -56c0,-15 12,-26 26,-26l15 0c15,0 26,11 26,26l0 56c0,4 4,7 8,7l57 0c4,0 7,-3 7,-7z"/></svg>
                    Все
                </label></li>
                <li><input type="radio" name="tab" id="pintab"><label for="pintab">
                    <svg viewBox="0 0 90 90"><path d="M45,23.9L45,23.9c0,0,18.1-22.3,37.3-5.4c11.3,9.9,9.7,25.4-2,37.1L45,89.7L9.7,55.6C-2,43.9-3.6,28.4,7.7,18.5  C26.9,1.6,45,23.9,45,23.9L45,23.9z"/></svg>
                    Пины
                </label></li>
                <li><input type="radio" name="tab" id="boardtab"><label for="boardtab">
                    <svg viewBox="0 0 100 100"><path d="M92.77,0H7.23A7,7,0,0,0,0,6.72V68.83a7,7,0,0,0,7.23,6.72H40.5L73,100V75.55H92.77A7,7,0,0,0,100,68.83V6.72A7,7,0,0,0,92.77,0Z"/></svg>
                    Доски
                </label></li>
            </ul>
        </div>
    </div>

    <ul class="desk__grid" id="desk-content">
        {{#each pins}}
            <li>{{{this}}}</li>
        {{/each}}
        {{#each boards}}
            <li>{{{this}}}</li>
        {{/each}}
    </ul>
</div>
