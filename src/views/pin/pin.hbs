{{{ navbar }}}

<div class="wrapper">
    <div class="container">

        <div class="pin__card">
            <section class="pin__card__image"><img src="{{ img_link }}" alt=""></section>

            <section class="pin__info">
                {{#if show}}
                    {{{ select }}}
                {{/if}}

                <h2 class="pin__info__title">{{ title }}</h2>
                <span class="pin__info__author">Автор: <a href="">{{ username }}</a></span>

                <p class="pin__info__description">
                    {{ content }}
                </p>
            </section>

            <section class="pin__comments__wrap">
                <ul class="pin__comments" id="commentList">
                    {{#each commentListRendered}}
                        <li>{{{ this }}}</li>
                    {{/each}}
                </ul>
            </section>

            {{#if auth}}
                <div class="pin__comment__add">
                    {{{ input }}}
                    {{{ btnComment }}}
                </div>
            {{/if}}

        </div>
    </div>
</div>




