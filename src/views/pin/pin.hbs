{{{ navbar }}}

<div class="wrapper">
    <div class="container">

        <div class="gallery-card">
<!--            <button class="close"><i class="fa fa-times"></i></button>-->

            <section class="gallery-image"><img src="{{ imgSrc }}" alt=""></section>
            <section class="gallery-info">

                <h2 class="gallery-title">{{ title }}</h2>
                <span class="gallery-author">Автор: <a href="" >{{ username }}</a></span>

                <p class="gallery-description">
                    {{ description }}
                </p>

                <div class="gallery-actions">
                    <span><i class="fa fa-heart"></i> {{ likes }}</span>
                    <span><i class="fa fa-comment"></i> {{ comments }}</span>
                </div>

                <hr>

                <div class="comment-add">
                    {{{ input }}}
                    {{{ btnComment }}}
                </div>

            </section>

        </div>

        {{#if commentList}}
            <div class="gallery-comments">
                <ul class="gallery-comments-list" id="commentList">
                    {{#each commentList}}
                        <li>{{{ this }}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}

    </div>
</div>